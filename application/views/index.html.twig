{%extends "header.html.twig" %}

{%block contenue %}
<!--Carroussel-->
<div class="hero-unit">
    <h1 class="text-center">{{carroussel.titre}}</h1>
    <p>{{carroussel.contenue|raw}}</p>
    <p><a href="#" class="btn btn-primary btn-large">En savoir plus &raquo;</a></p>
</div>

<div class="row-fluid">
    <h1 class="text-center">Derni√®res nouvelles</h1>
    
    {%for new in news%}
    <div class="well">
        <h3 class="text-center">{{new.titre}}</h3>
        <p style="text-align: justify;">{{new.contenue|raw}}</p>
        <p class="text-right">Par {{new.prenom}} {{new.nom}}, le {{new.date}}</p>
    </div>
    {%endfor%}
    
</div>
{%endblock%}
