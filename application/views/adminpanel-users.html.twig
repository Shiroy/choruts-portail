{%extends "adminpanel.html.twig" %}

{%block contenue%}
<h1 class="text-center">Gestion des utilisateurs</h1>

<a href="{{base_url}}/adminpanel/adduser" class="btn btn-success"><i class="icon-plus icon-white"></i> Ajouter un utilisateur</a>

<div class="pagination">
    <ul>
        {%for i in 0..nb_page if i > 0%}
            {% if i == current_page %}
            <li class="active"><a href="{{base_url}}/adminpanel/users/{{i}}">{{i}}</a></li>
            {%else%}
            <li><a href="{{base_url}}/adminpanel/users/{{i}}">{{i}}</a></li>
            {%endif%}
        {%endfor%}
    </ul>
</div>

<table class="table">
    <tr>
        <th>Login</th>
        <th>Prenom</th>
        <th>Nom</th>
        <th>E-mail</th>
        <th>Photo</th>
    </tr>
    
    {%for user in users %}
    <tr>
        <td><a href="{{base_url}}/users/profile/{{user.id}}">{{user.user}}</a></td>
        <td>{{user.prenom}}</td>
        <td>{{user.nom}}</td>
        <td>{{user.mail}}</td>
        <td>La photo</td>
    </tr>
    {%endfor%}
</table>
{%endblock%}